#! /bin/bash
-- set iterm to load preferences from custom location

xcode-select --install

/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

# terminal apps
term_apps=(
wget
git
tmux
vim
neovim
maven
httpie
fzf
ripgrep
node
trash
entr
)
brew install ${term_apps[@]}

softwareupdate --install-rosetta
curl -fLo cs https://git.io/coursier-cli-"$(uname | tr LD ld)"
chmod +x cs
./cs install cs
./cs setup
rm cs
Open new terminal window

#scala
#brew tap AdoptOpenJDK/openjdk
#brew cask install adoptopenjdk8

# macos cask apps
cask_apps=(
karabiner-elements
hammerspoon
keyboard-maestro
alfred
enpass
betterzip
nordvpn
vlc
iterm2
)
brew install --appdir="/Applications" ${cask_apps[@]}

# This adds the install directory to Alfredâ€™s search path so you can find installed applications with Alfred.
# brew cask alfred link

# Remove brew cruft
brew cleanup

git clone https://github.com/softmoth/zsh-vim-mode ~/.config/zsh-vim-mode

curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

brew install --cask visual-studio-code
brew install --cask intellij-idea
brew install cormacrelf/tap/dark-notify

echo "brew install is done!"
# stuff to do
# Dropbox - login
# Enpass - icloud sync login
# Alfred - key shortcut
# karabiner-elements - start, add permissions
# Keyboard Maestro - start and sync
# Vim - PlugInstall, CocInstall coc-metals
# Email - add account

# on some machines you may want
# Tunnelblic - login and add key
# brew cask install vmware-fusion

# Old versions
# keyboard-maestro 8 (in ZBackup)
